{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "func",
			"label": "func: host start",
			"command": "host start",
			"problemMatcher": "$func-node-watch",
			"isBackground": true,
			"dependsOn": "pnpm watch (functions)",
			"dependsOrder": "sequence",
			"options": {
				"cwd": "${workspaceFolder}/apps\\functions"
			}
		},
		{
			"type": "shell",
			"label": "pnpm install (functions)",
			"command": "pnpm install",
			"options": {
				"cwd": "${workspaceFolder}/apps\\functions"
			}
		},
		{
			"type": "shell",
			"label": "pnpm prune (functions)",
			"command": "pnpm prune --prod",
			"dependsOn": "pnpm build (functions)",
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}/apps\\functions"
			}
		},
		{
			"type": "shell",
			"label": "pnpm build (functions)",
			"command": "pnpm run build",
			"dependsOn": "pnpm clean (functions)",
			"problemMatcher": "$tsc",
			"options": {
				"cwd": "${workspaceFolder}/apps\\functions"
			}
		},
		{
			"type": "shell",
			"label": "pnpm watch (functions)",
			"command": "pnpm run watch",
			"dependsOn": "pnpm clean (functions)",
			"problemMatcher": "$tsc-watch",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"isBackground": true,
			"options": {
				"cwd": "${workspaceFolder}/apps\\functions"
			}
		},
		{
			"type": "shell",
			"label": "pnpm clean (functions)",
			"command": "pnpm run clean",
			"dependsOn": "pnpm install (functions)",
			"options": {
				"cwd": "${workspaceFolder}/apps\\functions"
			}
		},
		{
			"label": "pnpm typecheck (mobile)",
			"type": "shell",
			"command": "pnpm",
			"args": [
				"--filter",
				"@datebook/mobile",
				"typecheck"
			],
			"isBackground": false,
			"problemMatcher": [],
			"group": "test"
		}
	]
}